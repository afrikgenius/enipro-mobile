<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:focusable="true"
        card_view:cardElevation="50dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/education_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp"
                android:text="@string/edu_school"
                android:textSize="17sp"
                app:robotoTextWeight="medium" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/degree_course"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/education_school"
                android:text="@string/edu_degree"
                android:textColor="@color/material_grey_800_"
                android:textSize="15sp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/education_year_from"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/degree_course"
                android:text="@string/edu_from"
                android:textColor="@color/material_grey_800_"
                android:textSize="15sp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/hyphen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/degree_course"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@id/education_year_from"
                android:text="@string/hyphen"
                android:textColor="@color/material_grey_800_"
                android:textSize="15sp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/education_year_to"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/degree_course"
                android:layout_marginStart="3dp"
                android:layout_toEndOf="@id/hyphen"
                android:text="@string/edu_to"
                android:textColor="@color/material_grey_800_"
                android:textSize="15sp" />
            <!--Draw a line across-->
            <View
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/education_year_to"
                android:layout_marginEnd="12dp"
                android:layout_marginStart="12dp"
                android:layout_marginTop="10dp"
                android:background="@color/material_grey_300_" />
        </RelativeLayout>


    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
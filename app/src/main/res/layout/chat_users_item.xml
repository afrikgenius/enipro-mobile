<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:focusable="true"
        card_view:cardElevation="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/chat_user_image"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/image003"
                app:border_color="@color/colorPrimary"
                app:border_width="1dp" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/chat_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/chat_user_image"
                android:background="@android:color/transparent"
                android:textSize="14sp"
                android:text="@string/user_post_mock_first_name"
                android:textColor="@color/black" />

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/post_headline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/search_headline"
                android:layout_marginStart="10dp"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_toEndOf="@id/chat_user_image"
                android:layout_below="@id/chat_user_name"/>

            <com.devspark.robototextview.widget.RobotoTextView
                android:id="@+id/chat_user_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post_headline"
                android:layout_marginStart="10dp"
                android:textStyle="italic"
                android:layout_toEndOf="@id/chat_user_image"
                android:text="@string/user_type"/>

            <!-- TODO Implement a small rounded image with colorPrimary to Left of User type. -->
            <!--<Button-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginStart="10dp"-->
                <!--android:layout_below="@id/search_user_type"-->
                <!--android:layout_toEndOf="@id/post_image"-->
                <!--android:background="@drawable/solid_circle" />-->


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
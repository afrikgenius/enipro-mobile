<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|center_vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/no_feed_data"
        android:src="@drawable/ic_newsfeed"
        android:layout_centerHorizontal="true"/>

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/no_feed_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical"
        android:text="@string/no_feed_data"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        app:robotoTypeface="roboto_bold" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/no_feed_data_instructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/no_feed_data"
        android:layout_marginTop="8dp"
        android:text="@string/no_feed_data_instructions"
        app:robotoTypeface="roboto_light" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.VerifyEmailActivity">


    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/verify_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/verify_email"
        android:textSize="30sp"
        app:robotoTypeface="roboto_light" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify_email"
        android:layout_margin="12dp"
        android:gravity="center"
        android:text="@string/email_ver_note"
        android:textSize="15sp"
        app:robotoTypeface="roboto_light" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/email_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:hint="@string/email"
        android:inputType="text" />

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/send_ver_email"
        style="@style/ButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email_edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_teal"
        android:padding="8dp"
        android:text="@string/verify_email" />

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/snackbar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

</RelativeLayout>
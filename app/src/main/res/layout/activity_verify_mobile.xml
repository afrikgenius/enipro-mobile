<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.signup.VerifyMobileActivity">

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/verify_mobile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/verify_mobile"
        android:textSize="20sp" />

    <com.devspark.robototextview.widget.RobotoTextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verify_mobile"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="@string/verify_mobile_note" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/mobile_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginEnd="12dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="40dp"
        android:hint="@string/mobile_number"
        android:inputType="number"
        android:paddingEnd="5dp"
        android:paddingStart="5dp" />

    <com.devspark.robototextview.widget.RobotoEditText
        android:id="@+id/country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/desc"
        android:layout_marginTop="40dp"
        android:layout_toStartOf="@id/mobile_number"
        android:inputType="text" />

    <com.devspark.robototextview.widget.RobotoButton
        android:id="@+id/btnSendCode"
        style="@style/ButtonTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/country_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/button_teal"
        android:text="@string/send_code" />
</RelativeLayout>